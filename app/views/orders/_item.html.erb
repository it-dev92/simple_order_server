<tr id="<%= dom_id(order) %>" class="<%= cycle('bg-white', 'bg-blue-100') %>">
  <td class="text-left px-6 py-2 leading-5 font-medium text-gray-900">
    <%= link_to order.product_number, edit_order_path(order), class: "cursor-pointer text-blue-500 font-medium hover:underline m-1" %>
  </td>
  <td class="text-left px-6 py-2 leading-5 font-medium text-gray-900">
    <%= order.name %>
  </td>
  <td class="text-left px-6 py-2 whitespace-nowrap leading-5 font-medium text-gray-900">
    <span class="text-xs rounded-full bg-green-100 border border-green-500 text-green-600 px-2 py-0.5">
      <%= order.state %>
    </span>
  </td>
  <td class="text-left px-6 py-2 leading-5 font-medium text-gray-900">
    <%= order.created_at.strftime("%-m/%d/%Y") %>
  </td>
  <td class="text-left px-6 py-2 leading-5 font-medium text-gray-900">
    <%= order.delivered_at&.strftime("%-m/%d/%Y") %>
  </td>
</tr>
