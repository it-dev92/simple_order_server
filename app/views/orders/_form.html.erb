<% if @order.persisted? %>
  <div class="flex py-4">
    <label class="block font-medium text-gray-700 mr-8">Product #:</label>
    <span><%= f.object.product_number %></span>
  </div>
<% end %>
<div class="py-4">
  <%= f.label :name, "Name:", class: "block font-medium text-gray-700 mr-8" %>
  <%= f.text_field :name, required: true, class: "focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm border-gray-300 rounded-md" %>
</div>
<% if @order.persisted? %>
  <% if @order.complete? %>
    <div class="flex py-4">
      <label class="block font-medium text-gray-700 mr-8">State:</label>
      <span class="rounded-full bg-green-100 border border-green-500 text-green-600 px-2 py-0.5 capitalize">
        <%= f.object.state %>
      </span>
    </div>
  <% else %>
    <div class="py-4">
      <%= f.label :state, "State:", class: "block font-medium text-gray-700 mr-8" %>
      <%= f.select(:state, status_data(f.object.state), { include_blank: "Select"}, { required: true, class: 'focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm border-gray-300 rounded-md select form-control' }) %>
    </div>
  <% end %>
<% end %>
<% if @order.persisted? %>
  <div class="flex py-4">
    <label class="block font-medium text-gray-700 mr-8">Requested At:</label>
    <span><%= f.object.created_at.strftime("%m/%d/%Y") %></span>
  </div>
  <% if @order.complete? %>
    <div class="flex py-4">
      <label class="block font-medium text-gray-700 mr-8">Delivered At:</label>
      <span><%= f.object.delivered_at&.strftime("%m/%d/%Y") %></span>
    </div>
  <% end %>
<% end %>
