<div class="flex flex-col items-center mx-8 my-12">
  <h1 class="font-bold text-2xl">Edit Order</h1>
  <%= form_for @order, url: order_path(@order), method: :put do |f| %>
    <%= render "form", f: f %>
    <div class="text-right py-4">
      <%= link_to "Cancel", orders_path, class: "text-blue-500 hover:text-blue-900 mr-6" %>
      <%= f.submit "Update", class: "hover:bg-green-700 bg-green-500 px-2 p-1 leading-normal text-white rounded cursor-pointer" %>
    </div>
  <% end %>
</div>
